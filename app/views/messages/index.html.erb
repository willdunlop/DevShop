<% if @over_ten %>
 <%= link_to 'Show Previous', '?m=all' %>
<% end %>

<% if @message.conversation.sender_id == current_user.id %>
  <p class="devise-heading"> Conversation with <%=@message.conversation.recipient.profile.first_name %> </p>
<% else %>
  <p class="devise-heading"> Conversation with <%=@message.conversation.sender.profile.first_name %> </p>
<% end %>


<div class="message-container">
 <% @messages.each do |message| %>
  <% if message.body %>
   <% user = User.find(message.user_id) %>
   <div class="item">
    <div class="content">
     <div class="header"><strong><%= user.profile.first_name %></strong>     <%= message.message_time %></div>
      <div class="list">
       <div class="item">
        <i class="right triangle icon"></i>
         <%= message.body %>
      </div>
    </div>
   </div>
 </div>
 <% end %>
<% end %>
</div>

<%= form_for [@conversation, @message], html: {class: "ui reply form"} do |f| %>
 <div class="message-box">
   <%= f.text_area :body, class: "form-control", placeholder: "Write your message here..." %>
 </div>
 <%= f.text_field :user_id, value: current_user.id, type: "hidden" %>
 <div class="button-container-1">
   <%= f.submit "Add Reply", class: "log-button" %>
 </div>

<% end %>
