            <%= awesome_link('fa-star', voteone_dev_corner_path(@dev_corner), method: :put) %>
            <%= awesome_link('fa-star', votetwo_dev_corner_path(@dev_corner), method: :put) %>
            <%= awesome_link('fa-star', votethree_dev_corner_path(@dev_corner), method: :put) %>
            <%= awesome_link('fa-star-o', votefour_dev_corner_path(@dev_corner), method: :put) %>
            <%= awesome_link('fa-star-o', votefive_dev_corner_path(@dev_corner), method: :put) %>
            <% elsif a.vote_weight == 4 %>
            <%= awesome_link('fa-star', voteone_dev_corner_path(@dev_corner), method: :put) %>
            <%= awesome_link('fa-star', votetwo_dev_corner_path(@dev_corner), method: :put) %>
            <%= awesome_link('fa-star', votethree_dev_corner_path(@dev_corner), method: :put) %>
            <%= awesome_link('fa-star', votefour_dev_corner_path(@dev_corner), method: :put) %>
            <%= awesome_link('fa-star-o', votefive_dev_corner_path(@dev_corner), method: :put) %>
            <% elsif a.vote_weight == 5 %>
            <%= awesome_link('fa-star', voteone_dev_corner_path(@dev_corner), method: :put) %>
            <%= awesome_link('fa-star', votetwo_dev_corner_path(@dev_corner), method: :put) %>
            <%= awesome_link('fa-star', votethree_dev_corner_path(@dev_corner), method: :put) %>
            <%= awesome_link('fa-star', votefour_dev_corner_path(@dev_corner), method: :put) %>
            <%= awesome_link('fa-star', votefive_dev_corner_path(@dev_corner), method: :put) %>
            <% end %>
            <% else %>
            <%= awesome_link('fa-star-o', voteone_dev_corner_path(@dev_corner), method: :put) %>
            <%= awesome_link('fa-star-o', votetwo_dev_corner_path(@dev_corner), method: :put) %>
            <%= awesome_link('fa-star-o', votethree_dev_corner_path(@dev_corner), method: :put) %>
