<%= stylesheet_link_tag dev_corner_path(@dev_corner.user_css_input, "css", id: @dev_corner.profile.id) %>

  <style>
    <%= @dev_corner.user_css_input %>
  </style>

  <html>
  <%= @dev_corner.user_html_input %>
  </html>
<% if current_user.profile.dev_corner.nil? %>
<% else %>
<% if current_user.profile.dev_corner.id == @dev_corner.id %>
<div class = "dev-panel">
  <%= link_to edit_dev_corner_path(@dev_corner) do %>
    <div class="dev-panel-button">Edit Your Shop</div>
  <% end %>
  <div class="dev-panel-button">View Transactions</div>
  <div class="dev-panel-button">Another Button</div>
</div>
<% else %>
<% end %>
<% end %>

<p id="notice"><%= notice %></p>


<div class="dc-container">
  <div class="dc-container-top">
    <div class="dc-profile-card">
      <div class="profile-first-last-name">
        <%= @dev_corner.profile.first_name %> <%= @dev_corner.profile.last_name %>
        <div class="dc-rating">
        <% if user_signed_in? %>
          <% if current_user.voted_for? @dev_corner %>
            <% a = Vote.find_by(:voter_id => current_user.id, :votable_id => @dev_corner.id) %>
