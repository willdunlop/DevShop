<div class="spacer"></div>
<%= stylesheet_link_tag dev_corner_path(@dev_corner.user_css_input, "css", id: @dev_corner.profile.id) %>

<style>

    <%= @dev_corner.user_css_input %>
  </style>

  <html>
  <%= @dev_corner.user_html_input %>
  </html>

<div class = "dev-panel">
  <%= link_to edit_dev_corner_path(@dev_corner) do %>
    <div class="dev-panel-button">Edit Your Shop</div>
  <% end %>
  <div class="dev-panel-button">View Transactions</div>
  <div class="dev-panel-button">Another Button</div>


</div>

<p id="notice"><%= notice %></p>


<div class="dc-container">
  <div class="dc-container-top">
    <div class="dc-profile-card">
      <div class="profile-first-last-name">
        <%= @dev_corner.profile.first_name %> <%= @dev_corner.profile.last_name %>
        <div class="dc-rating">
        <% if user_signed_in? %>
          <% if current_user.voted_for? @dev_corner %>
            <% a = Vote.find_by(:voter_id => current_user.id, :votable_id => @dev_corner.id) %>
            <% if a.vote_weight == 1 %>
            <%= awesome_link('fa-star', voteone_dev_corner_path(@dev_corner), method: :put) %>
            <%= awesome_link('fa-star-o', votetwo_dev_corner_path(@dev_corner), method: :put) %>
            <%= awesome_link('fa-star-o', votethree_dev_corner_path(@dev_corner), method: :put) %>
            <%= awesome_link('fa-star-o', votefour_dev_corner_path(@dev_corner), method: :put) %>
            <%= awesome_link('fa-star-o', votefive_dev_corner_path(@dev_corner), method: :put) %>
            <% elsif a.vote_weight == 2 %>
            <%= awesome_link('fa-star', voteone_dev_corner_path(@dev_corner), method: :put) %>
            <%= awesome_link('fa-star', votetwo_dev_corner_path(@dev_corner), method: :put) %>
            <%= awesome_link('fa-star-o', votethree_dev_corner_path(@dev_corner), method: :put) %>
            <%= awesome_link('fa-star-o', votefour_dev_corner_path(@dev_corner), method: :put) %>
            <%= awesome_link('fa-star-o', votefive_dev_corner_path(@dev_corner), method: :put) %>
            <% elsif a.vote_weight == 3 %>
            <%= awesome_link('fa-star', voteone_dev_corner_path(@dev_corner), method: :put) %>
            <%= awesome_link('fa-star', votetwo_dev_corner_path(@dev_corner), method: :put) %>
            <%= awesome_link('fa-star', votethree_dev_corner_path(@dev_corner), method: :put) %>
            <%= awesome_link('fa-star-o', votefour_dev_corner_path(@dev_corner), method: :put) %>
            <%= awesome_link('fa-star-o', votefive_dev_corner_path(@dev_corner), method: :put) %>
            <% elsif a.vote_weight == 4 %>
            <%= awesome_link('fa-star', voteone_dev_corner_path(@dev_corner), method: :put) %>
            <%= awesome_link('fa-star', votetwo_dev_corner_path(@dev_corner), method: :put) %>
            <%= awesome_link('fa-star', votethree_dev_corner_path(@dev_corner), method: :put) %>
            <%= awesome_link('fa-star', votefour_dev_corner_path(@dev_corner), method: :put) %>
            <%= awesome_link('fa-star-o', votefive_dev_corner_path(@dev_corner), method: :put) %>
            <% elsif a.vote_weight == 5 %>
            <%= awesome_link('fa-star', voteone_dev_corner_path(@dev_corner), method: :put) %>
            <%= awesome_link('fa-star', votetwo_dev_corner_path(@dev_corner), method: :put) %>
            <%= awesome_link('fa-star', votethree_dev_corner_path(@dev_corner), method: :put) %>
            <%= awesome_link('fa-star', votefour_dev_corner_path(@dev_corner), method: :put) %>
            <%= awesome_link('fa-star', votefive_dev_corner_path(@dev_corner), method: :put) %>
            <% end %>
            <% else %>
            <%= awesome_link('fa-star-o', voteone_dev_corner_path(@dev_corner), method: :put) %>
            <%= awesome_link('fa-star-o', votetwo_dev_corner_path(@dev_corner), method: :put) %>
            <%= awesome_link('fa-star-o', votethree_dev_corner_path(@dev_corner), method: :put) %>
            <%= awesome_link('fa-star-o', votefour_dev_corner_path(@dev_corner), method: :put) %>
            <%= awesome_link('fa-star-o', votefive_dev_corner_path(@dev_corner), method: :put) %>
          <% end %>
        <% end %>

        <%= @dev_corner.score %>
        </div>
      </div>
      <div class="profile-picture">
        <%= image_tag @dev_corner.profile.image, style: "width: 95%; height: auto; padding: 5px;" %>
      </div>
      <div class ="profile-info">
        <p><b>Email:</b> <%= @dev_corner.profile.user.email %></p>
        <p><b>Birthday:</b> <%= @dev_corner.profile.birthday %></p>
        <h4 class="profile-info-desc">About <%= @dev_corner.profile.first_name %>:</h4>
        <%= @dev_corner.profile.description %>
      </div>

    </div>


  </div>

  <div class="dc-container-bottom">
    <div class="dc-box">
      <p class="dc-skills-heading"><b>My Skills: </b></p>
      <%= @dev_corner.skills %>
    </div>
    <div class="dc-box">
      <p class="dc-skills-heading"><b>My Experience: </b></p>
      <%= @dev_corner.experience %>
    </div>
    <div class="dc-box">
      <p class="dc-skills-heading"><b>My Strengths: </b></p>
      <%= @dev_corner.strengths %>
    </div>
  </div>

</div>



