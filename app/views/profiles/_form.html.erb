
<%= form_for(profile) do |f| %>
  <% if profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

      <ul>
      <% profile.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="field">
    <%= f.label :first_name %>
    <%= f.text_field :first_name, placeholder: "First Name" %>
  </div>

  <div class="field">
    <%= f.label :last_name %>
    <%= f.text_field :last_name, placeholder: "Last Name" %>
  </div>

  <div class="field">
    <%= f.label :birthday %>
    <%= f.date_select :birthday %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label :image %><br>
    <%= f.file_field :image %>
  </div>


<div class="button-container-1">
    <%= f.submit "Update", class: "log-button" %>
    <% if user_signed_in? %>
      <% if  current_user.profile.dev_corner.nil?  %>
        <%= link_to new_dev_corner_path do %>
          <div class="dev-button">Become a Dev</div>
        <% end %>
      <% else %>
        <%= link_to dev_corner_path(current_user.profile) do %>
        <div class="dev-button">Your Shop</div>
      <% end %>
      <%end%>
      <% else %>
      <% end %>


</div>
<% end %>
