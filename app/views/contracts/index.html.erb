<!-- ONLY AVAILABLE FOR ADMINS -->

<h1>Contracts</h1>

<table>
  <thead>
    <tr>
      <th>Profile</th>
      <th>Dev corner</th>
      <th>Name</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Description</th>
      <th>User agree</th>
      <th>Dev agree</th>
      <th>Cost</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contracts.each do |contract| %>
      <tr>
        <td><%= contract.profile %></td>
        <td><%= contract.dev_corner %></td>
        <td><%= contract.name %></td>
        <td><%= contract.start_date %></td>
        <td><%= contract.end_date %></td>
        <td><%= contract.description %></td>
        <td><%= contract.user_agree %></td>
        <td><%= contract.dev_agree %></td>
        <td><%= contract.cost %></td>
        <td><%= link_to 'Show', contract %></td>
        <td><%= link_to 'Edit', edit_contract_path(contract) %></td>
        <td><%= link_to 'Destroy', contract, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

